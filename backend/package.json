{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend PetShop",
  "main": "dist/index.js",
  "scripts": {
    "dev:build": "tsc -w --preserveWatchOutput",
    "dev:run": "nodemon --watch dist --exec \"node dist/index.js\"",
    "dev": "concurrently -k \"npm:dev:build\" \"npm:dev:run\"",
    "typecheck": "tsc --noEmit -w",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"No tests\" && exit 0"
  },
  "type": "module",
  "dependencies": {
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3"
  }
}
